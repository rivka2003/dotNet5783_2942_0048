<Window x:Class="PL.Order.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="OrderWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/Product/Image3.png"/>
    </Window.Background>

    <Window.Resources>
        <Style x:Key="XLabel" TargetType="Label">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontSize"  Value="9"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Content" Value="✕"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Margin" Value="120,0,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style x:Key="VLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#FF13FF2A"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontSize"  Value="9"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Content" Value="✓"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Margin" Value="120,0,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <local:EmptyToVisable x:Key="EmptyToVisable"/>
        <local:FullToVisable x:Key="FullToVisable"/>
    </Window.Resources>


    <Grid Margin="0,0,0,0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="inGridOne" Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="lblID" Content="ID:" Grid.Column="0" Width="40"/>

            <Label x:Name="lblcNAME" Content="Customer name:" Width="115" Grid.Row="1" Grid.Column="0"/>

            <Label x:Name="lblcADDRESS" Content="Customer address:" Width="128" Grid.Row="2" Grid.Column="0"/>

            <TextBox x:Name="tbID"   HorizontalAlignment="Left" Width="120" Grid.Row="0" Grid.Column="1" 
                     IsEnabled="False"/>

            <TextBox x:Name="tbcNAME" HorizontalAlignment="Left" Width="120" Grid.Row="1" Grid.Column="1" 
                     IsEnabled="False"/>

            <TextBox x:Name="tbADDRESS"  HorizontalAlignment="Left" Width="120" Grid.Row="2" Grid.Column="1" 
                     IsEnabled="False"/>

            <Label x:Name="lblCHECK1"  Grid.Row="0" Grid.Column="1" Style="{StaticResource VLabel}" 
                   Visibility="{Binding ElementName=tbID, Path=Text, Converter={StaticResource FullToVisable}}"/>

            <Label x:Name="lblx1"  Grid.Row="0" Grid.Column="1" Style="{StaticResource XLabel}"
                   Visibility="{Binding ElementName=tbID, Path=Text, Converter={StaticResource EmptyToVisable}}"/>

            <Label x:Name="lblCHECK2"  Grid.Row="1" Grid.Column="1"  Style="{StaticResource VLabel}" 
                   Visibility="{Binding ElementName=tbcNAME, Path=Text, Converter={StaticResource FullToVisable}}"/>

            <Label x:Name="lblx2"  Grid.Row="1" Grid.Column="1" Style="{StaticResource XLabel}"
                   Visibility="{Binding ElementName=tbcNAME, Path=Text, Converter={StaticResource EmptyToVisable}}"/>

            <Label x:Name="lblCHECK3"  Grid.Row="2" Grid.Column="1" Style="{StaticResource VLabel}" 
                   Visibility="{Binding ElementName=tbADDRESS, Path=Text, Converter={StaticResource FullToVisable}}"/>

            <Label x:Name="lblx3"  Grid.Row="2" Grid.Column="1" Style="{StaticResource XLabel}"
                   Visibility="{Binding ElementName=tbADDRESS, Path=Text, Converter={StaticResource EmptyToVisable}}"/>
        </Grid>

        <Grid x:Name="inGridSecond" Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="lblORDERDATE" Content="Order date:" HorizontalAlignment="Right" Width="78" 
                   Grid.Row="0" Grid.Column="0"/>

            <Label x:Name="lblSHIPDATE" Content="ship date:" HorizontalAlignment="Right" Width="78" 
               Grid.Row="1" Grid.Column="0"/>

            <Label x:Name="lblDELIVERYDATE" Content="delivery date:" HorizontalAlignment="Right" Width="88"  
               Grid.Row="2" Grid.Column="0"/>

            <TextBox x:Name="tbORDERDATE"  HorizontalAlignment="Left" Grid.Row="0" Grid.Column="1" 
                     IsEnabled="False"/>

            <TextBox x:Name="tbSHIPDATE" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" 
                     TextChanged="tbSHIPDATE_TextChanged"/>

            <TextBox x:Name="tbDELIVERYDATE" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1" 
                     TextChanged="tbDELIVERYDATE_TextChanged"/>

            <Label x:Name="lblCHECK4"  Grid.Row="0" Grid.Column="1" Style="{StaticResource VLabel}" 
                   Visibility="{Binding ElementName=tbORDERDATE, Path=Text, Converter={StaticResource FullToVisable}}"/>

            <Label x:Name="lblx4"  Grid.Row="0" Grid.Column="1" Style="{StaticResource XLabel}" 
                   Visibility="{Binding ElementName=tbORDERDATE, Path=Text, Converter={StaticResource EmptyToVisable}}"/>

            <Label x:Name="lblCHECK5"  Grid.Row="1" Grid.Column="1" Style="{StaticResource VLabel}" 
                   Visibility="{Binding ElementName=tbSHIPDATE, Path=Text, Converter={StaticResource FullToVisable}}"/>

            <Label x:Name="lblx5"  Grid.Row="1" Grid.Column="1" Style="{StaticResource XLabel}"
                   Visibility="{Binding ElementName=tbSHIPDATE, Path=Text, Converter={StaticResource EmptyToVisable}}"/>

            <Label x:Name="lblCHECK6"  Grid.Row="2" Grid.Column="1" Style="{StaticResource VLabel}" 
                   Visibility="{Binding ElementName=tbDELIVERYDATE, Path=Text, Converter={StaticResource FullToVisable}}"/>

            <Label x:Name="lblx6"  Grid.Row="2" Grid.Column="1" Style="{StaticResource XLabel}"
                   Visibility="{Binding ElementName=tbDELIVERYDATE, Path=Text, Converter={StaticResource EmptyToVisable}}"/>
        </Grid>

        <Button x:Name="btnUPDATE"  Content="UPDATE" HorizontalAlignment="Left" Margin="366,375,0,0" VerticalAlignment="Top" 
                    Height="34" Width="68" Click="BtnUpdate_Click" Foreground="Red" Grid.ColumnSpan="2"/>
        
        <Label x:Name="lblTITLE" Content="Update order:" HorizontalAlignment="Left" Margin="343,10,0,0" 
               VerticalAlignment="Top" Grid.ColumnSpan="2" FontWeight="Bold" FontSize="18"/>
    </Grid>
</Window>
