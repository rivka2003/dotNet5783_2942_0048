<Window x:Class="PL.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="StartWindow" Height="533" Width="849">
    <Window.Background>
        <ImageBrush ImageSource="/Image4.png"/>
    </Window.Background>

    <Window.Resources>
        <Style x:Key="WhiteButtone" TargetType="Button">
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="FontSize" Value="33"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Elephant"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="BTManager" Grid.Column="0" Content="Manager" HorizontalAlignment="Center" VerticalAlignment="Center" Height="90" Width="189" Style="{StaticResource WhiteButtone}" Click="BTManager_Click"/>
        <Button x:Name="BTNewOrder"  Grid.Column="2" Content="New order" HorizontalAlignment="Center" VerticalAlignment="Center" Height="90" Width="189" Style="{StaticResource WhiteButtone}" Click="BTNewOrder_Click"/>
        <Button x:Name="BTOrderTracking" Grid.Column="1" Content="Order tracking" HorizontalAlignment="Center" VerticalAlignment="Center" Height="90" Width="263" Style="{StaticResource WhiteButtone}" Click="BTOrderTracking_Click"/>
    </Grid>
</Window>
