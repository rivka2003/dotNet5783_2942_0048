<Window x:Class="PL.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="StartWindow" Height="533" Width="849">
    <Window.Background>
        <ImageBrush ImageSource="/Image4.png"/>
    </Window.Background>

    <Window.Resources>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="BTManager" Grid.Column="0" Content="Manager" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Height="135" Width="324" 
                Click="BTManager_Click" FontSize="60"/>
        <Button x:Name="BTCustomer" Grid.Column="1" Content="Customer" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Height="135" Width="324" 
                Click="BTCustomer_Click" FontSize="60"/>
    </Grid>
</Window>
