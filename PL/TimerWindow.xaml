<Window x:Class="PL.TimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource self}}"
        Title="TimerWindow" Closed="Window_Closed" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        
        <Button Name="Stop" Content="Stop" Margin="10" Grid.Row="1" Grid.Column="1" FontSize="40" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        
        <TextBlock Name="timerTextBlock"  Text="00:00:00" VerticalAlignment="Top"  Grid.ColumnSpan="2" FontSize="45" 
                   TextAlignment="Center" Foreground="#FFF10E0E" />

    </Grid>
</Window>
